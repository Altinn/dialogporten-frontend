{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",                               
    "jsx": "react",
    "rootDir": "./src",
    "esModuleInterop": true,                            
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,
    "strictNullChecks": true,
  },
  "plugins": [{ "name": "typescript-plugin-css-modules" }],
  "include": ["**/*.ts", "**/*.tsx"],
}
