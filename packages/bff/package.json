{
  "name": "bff",
  "version": "1.0.0",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "mprocs 'pnpm dev:start' 'pnpm dev:types'",
    "dev:start": "nodemon --watch 'src/**' --ext 'ts' --exec './src/index.ts'",
    "dev:types": "pnpm typecheck --watch",
    "docker": "concurrently \"npx tsc --watch\" \"nodemon --watch '/app/packages/bff/src/**/*.ts'\"",
    "build:docker": "docker build -f ./Dockerfile -t bff ../..",
    "run:docker": "docker run -e -it -p 80:80 bff"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.4.1",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-keys": "^4.7.2",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/http-proxy": "^9.5.0",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/session": "^10.7.0",
    "applicationinsights": "^2.9.0",
    "axios": "^1.6.2",
    "azure-app-configuration": "^0.0.1-security.3",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.1",
    "fastify-graphiql": "workspace:*",
    "fastify-graphql": "workspace:*",
    "fastify-plugin": "^4.5.1",
    "ioredis": "^5.4.0",
    "jsonwebtoken": "^9.0.2",
    "nexus": "^1.3.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.19",
    "util": "^0.12.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@azure/keyvault-secrets": "^4.7.0",
    "@tsconfig/node20": "^20.1.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^16.18.78",
    "@types/reflect-metadata": "^0.1.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "mprocs": "^0.6.4",
    "typescript": "^5.4.4"
  },
  "type": "module"
}
