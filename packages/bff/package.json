{
  "name": "bff",
  "version": "1.0.0",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "typeorm": "typeorm-ts-node-commonjs",
    "typeormold": "typeorm-ts-node-commonjs -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "migration:run": "ts-node src/migration.ts",
    "migration:create": "node src/scripts/migration-create.js",
    "typeorm:run": "typeorm-ts-node-commonjs migration:run -- -d src/data-source.ts",
    "typeorm:revert": "npm run typeorm migration:revert",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon --watch 'src/**/*.ts'\"",
    "docker": "concurrently \"npx tsc --watch\" \"nodemon --watch '/app/packages/bff/src/**/*.ts'\"",
    "build:docker": "docker build -f ./Dockerfile -t bff ../..",
    "run:docker": "docker run -e -it -p 80:80 bff"
  },
  "dependencies": {
    "@azure/app-configuration": "^1.4.1",
    "@azure/identity": "^4.0.0",
    "@azure/keyvault-keys": "^4.7.2",
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/passport": "^2.4.0",
    "@fastify/session": "^10.7.0",
    "applicationinsights": "^2.9.0",
    "axios": "^1.6.2",
    "azure-app-configuration": "^0.0.1-security.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.26.1",
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^5.6.1",
    "passport": "^0.6.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.19",
    "util": "^0.12.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@azure/keyvault-secrets": "^4.7.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^16.18.78",
    "@types/passport": "^1.0.16",
    "@types/reflect-metadata": "^0.1.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.4"
  }
}
