{
  "name": "bff",
  "version": "1.0.0",
  "main": "src/index.ts",
  "private": true,
  "scripts": {
    "start": "./src/app.ts",
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "dev": "mprocs 'pnpm dev:start' 'pnpm dev:types'",
    "dev:start": "nodemon --watch 'src/**' --ext 'ts' --exec './src/app.ts'",
    "dev:types": "pnpm typecheck --watch",
    "docker": "concurrently \"npx tsc --watch\" \"nodemon --watch '/app/packages/bff/src/**/*.ts' --ext 'ts' --exec './src/app.ts'\"",
    "build:docker": "docker build -f ./Dockerfile -t bff ../..",
    "run:docker": "docker run -e -it -p 80:80 bff",
    "typeorm": "typeorm-ts-node-esm"
  },
  "dependencies": {
    "@azure/monitor-opentelemetry": "1.7.0",
    "@digdir/dialogporten-node-logger": "workspace:*",
    "@digdir/dialogporten-schema": "1.62.5-ade2f11",
    "@fastify/cookie": "11.0.2",
    "@fastify/cors": "10.0.2",
    "@fastify/formbody": "8.0.2",
    "@fastify/session": "11.1.0",
    "@graphql-tools/executor-http": "1.2.4",
    "@graphql-tools/schema": "10.0.16",
    "@graphql-tools/stitch": "9.4.13",
    "@graphql-tools/utils": "10.7.2",
    "@graphql-tools/wrap": "10.0.27",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/instrumentation": "0.55.0",
    "@opentelemetry/instrumentation-fastify": "0.45.0",
    "@opentelemetry/instrumentation-graphql": "0.48.0",
    "@opentelemetry/instrumentation-http": "0.55.0",
    "@opentelemetry/instrumentation-ioredis": "0.48.0",
    "@opentelemetry/resources": "1.26.0",
    "@opentelemetry/sdk-trace-base": "1.26.0",
    "@opentelemetry/semantic-conventions": "1.27.0",
    "axios": "^1.6.2",
    "connect-redis": "7.1.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "dotenv": "16.4.7",
    "fastify": "5.2.1",
    "fastify-graphiql": "workspace:*",
    "fastify-plugin": "5.0.1",
    "graphql": "16.10.0",
    "graphql-http": "1.22.3",
    "graphql-tools": "9.0.11",
    "ioredis": "5.4.2",
    "jsonwebtoken": "9.0.2",
    "nexus": "1.3.0",
    "pg": "8.13.1",
    "reflect-metadata": "0.2.2",
    "typeorm": "0.3.19",
    "util": "0.12.5",
    "vitest": "^2.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@tsconfig/node22": "22.0.0",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.17",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.5.1",
    "concurrently": "8.2.2",
    "mprocs": "0.6.4",
    "nodemon": "3.1.9",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.8.1",
    "typescript": "5.5.4",
    "vitest": "2.1.9"
  },
  "type": "module"
}
