{
  "name": "frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./index.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest run",
    "codegen:playwright": "playwright codegen",
    "test:playwright": "npx playwright test --project=playwright",
    "test:playwright:mobile": "npx playwright test --project=playwright-mobile",
    "test:accessibility": "npx playwright test --project=accessibility",
    "install:browsers": "playwright install",
    "test:watch": "vitest watch",
    "build:docker": "docker build -f ./Dockerfile -t frontend ../..",
    "run:docker": "docker run -it -p 80:80 frontend",
    "i18n:check": "tsx ./src/i18n/check.ts",
    "i18n:sort": "tsx ./src/i18n/check.ts --sort"
  },
  "dependencies": {
    "@altinn/altinn-components": "^0.30.2",
    "@microsoft/applicationinsights-react-js": "17.3.2",
    "@microsoft/applicationinsights-web": "3.3.3",
    "@navikt/aksel-icons": "^7.22.0",
    "@tanstack/react-query": "^5.76.2",
    "bff-types-generated": "workspace:*",
    "classnames": "^2.5.1",
    "date-fns": "^3.6.0",
    "embeddable-markdown-html": "workspace:*",
    "graphql": "^16.11.0",
    "graphql-request": "^6.1.0",
    "i18next": "^23.16.8",
    "i18next-icu": "^2.3.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.2",
    "react-router-dom": "^7.6.0",
    "sse.js": "^2.6.0",
    "use-debounce": "^10.0.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.52.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "axe-html-reporter": "^2.2.11",
    "dotenv": "^16.5.0",
    "jsdom": "^24.1.3",
    "msw": "^2.8.4",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vite": "^5.4.19",
    "vitest": "^2.1.9",
    "web-streams-polyfill": "^3.3.3"
  },
  "msw": {
    "workerDirectory": ["public"]
  }
}
