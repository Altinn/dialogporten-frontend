{
  "name": "bff-node",
  "version": "0.0.1",
  "description": "",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "@azure/app-configuration": "^1.4.1",
    "@azure/identity": "^3.3.1",
    "@azure/keyvault-keys": "^4.7.2",
    "applicationinsights": "^2.9.0",
    "azure-app-configuration": "^0.0.1-security.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.1",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "swagger-autogen": "^2.23.5",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "0.3.17",
    "zod": "^3.22.2"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.ts",
    "typeorm:local": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/data-source.local.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "migration:create": "node src/scripts/migration-create.js",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:revert": "npm run typeorm migration:revert",
    "dev2": "nodemon --watch 'src/**/*.ts' --exec 'tsc && node dist/app.js'",
    "dev3": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon --watch 'src/**/*.ts'\""
  },
  "devDependencies": {
    "@azure/keyvault-secrets": "^4.7.0",
    "@types/express": "^4.17.20",
    "@types/node": "^16.11.10",
    "@types/reflect-metadata": "^0.1.0",
    "@types/swagger-ui-express": "^4.1.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "typescript": "4.5.2"
  }
}
